<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProxAlertActivity" >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <EditText
            android:id="@+id/point_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"

            />

        <EditText
            android:id="@+id/point_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            />

        <Button
            android:id="@+id/find_coordinates_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="CALIBRAR GPS" />

        <Button
            android:id="@+id/save_point_button"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="SAVE POSITION"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-35dp"

            />

        <TextView
            android:id="@+id/txtLatlng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Coordenadas"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/txtdireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="Direccion"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/imgbtnactivo"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/activo"
            android:visibility="invisible"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtId"
            android:text="ID"
            android:visibility="invisible"/>


    </LinearLayout>
</fragment>