<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Consultar_Activo">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CONSULTAR ACTIVO"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/editCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Codigo"/>

                <EditText
                    android:focusable="false"
                    android:id="@+id/editDireccion"
                    android:hint="Ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:focusable="false"
                    android:id="@+id/editCoordenadas"
                    android:hint="Coordenadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/editDescripcion"
                    android:hint="Descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/editSerie"
                    android:hint="Serie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/editModelo"
                    android:hint="Modelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/editMarca"
                    android:hint="Marca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtequipo"
                    android:text="equipo"/>
                <ImageView
                    android:id="@+id/imagenId"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/img_base"
                    android:layout_below="@+id/linearLayout"

                    android:layout_centerHorizontal="true"/>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btnConsultarActivo"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="Consultar"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnUpdateActivo"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="247dp"
        android:layout_marginLeft="247dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:text="UPDATE"
        android:textColor="@android:color/white" />


    <ImageButton
        android:id="@+id/btnimg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="300dp"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/btnimg2"
        android:layout_width="39dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_search_category_default"
        android:visibility="invisible"
        />

</RelativeLayout>